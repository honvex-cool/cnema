<h2>Add as review of movie</h2>
<form action="/add-review-of-movie-action?review_id=<%= reviews[0].review_id %>" method="post">
    <select name="movie_id" required>
        <option value="">[Select movie]</option>
        <% for(let movie of movies) { %>
            <option value="<%= movie.movie_id %>">
                <%= movie.title %>
            </option>
        <% } %>
